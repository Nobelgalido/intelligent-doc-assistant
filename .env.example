# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to git
# ==============================================

# ==============================================
# DJANGO SETTINGS
# ==============================================
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-!@#$%^&*
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_NAME=intelligent_doc_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-password-here
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Alternative: Full DATABASE_URL (comment out above if using this)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/intelligent_doc_db

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379/0

# ==============================================
# AI PROVIDER CONFIGURATION
# ==============================================
# Choose: 'gemini' (FREE!) or 'openai' (paid)
AI_PROVIDER=gemini

# Google Gemini (FREE - Recommended for learning)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-gemini-api-key-here

# OpenAI (Optional - paid service)
# Get your API key from: https://platform.openai.com/account/api-keys
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# CORS SETTINGS
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================
# FILE STORAGE
# ==============================================
# Local development (default)
STORAGE_BACKEND=local

# AWS S3 Configuration (optional - for production)
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ==============================================
# CELERY CONFIGURATION
# ==============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ==============================================
# SECURITY SETTINGS (Production)
# ==============================================
# Uncomment these for production deployment
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# ==============================================
# MONITORING & LOGGING (Production)
# ==============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn-here

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
# This will be used in frontend/.env
VITE_API_BASE_URL=http://localhost:8000/api/v1

# ==============================================
# DEVELOPMENT FLAGS
# ==============================================
# Enable Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=True

# Enable Django Extensions
ENABLE_DJANGO_EXTENSIONS=True

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50

# Number of Celery workers
CELERY_WORKER_CONCURRENCY=4

# RAG Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K_RESULTS=5

# AI Model Configuration
# Gemini models (when AI_PROVIDER=gemini)
GEMINI_MODEL=gemini-1.5-flash  # Free: gemini-1.5-flash or gemini-1.5-pro
GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# OpenAI models (when AI_PROVIDER=openai)
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# General settings
AI_TEMPERATURE=0.7
